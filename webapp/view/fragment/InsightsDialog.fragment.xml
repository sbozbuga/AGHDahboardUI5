<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		id="insightsDialog"
		title="AdGuard AI Insights"
		contentWidth="600px"
		contentHeight="500px"
		resizable="true">
		<content>
			<VBox class="sapUiSmallMargin">
                <Text text="Analysis based on recent logs:" class="sapUiSmallMarginBottom" />
                <!-- HTML content takes formatting (strong headers, breaks) -->
                <core:HTML content="{view>/analysisHtml}" preferDOM="false" />
			</VBox>
		</content>
		<buttons>
			<Button text="Copy" icon="sap-icon://copy" press="onCopyInsights" tooltip="Copy Analysis to Clipboard" />
			<Button text="Close" press="onCloseInsights" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>
